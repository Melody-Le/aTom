<html>
  <head>
    <%- include('../partials/generic_head') %>
    <title>aTom | Freelancer Community</title>
    <link rel="stylesheet" type="text/css" href="/styles/freelancer_community_page.css">
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <div class="container mt-5 ">
      <div class="row row-cols-1 row-cols-md-3 g-3">
        <% users.forEach((user) => { %>
          <% if (user.isFreelancer) { %>
            <div class="col">
              <div class="card freelancer-card px-3">
                <a href="/profiles/<%= user?._id%>" class="profile-head">
                  <img src="<%= user.profile_photos_url %>" class="profile-image" alt="<%= user?.user_name%> profile photo">
                  <h5 class="mx-auto text-capitalize py-3"><%= user?.user_name %></h5>
                </a>
                <div class="card-body freelancer-intro p-0">
                  <h5 class="card-title"><%= user?.job_title %></h5>
                  <p class="card-text about-me"><%= user?.about_me %></p>
                </div>
                <img src="<%= user?.cover_photos_url%>" class="card-img-top mt-2 cover-photo" alt="<%= user?.user_name%> cover photo">
                <ul class=" container list-inline px-0 mb-0">
                  <% user?.skills.forEach((skill) => { %>
                    <li class="list-inline-item mx-0 rounded"><%= skill%></li>
                  <% }) %>
                </ul>
                <div class="card-body">
                  <a href="#!" class="card-link">Message me</a>
                  <a href="mailto:<%= user?.email%>" class="card-link">Email me</a>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
      </div>
    </div>
    <%- include('../partials/footer.ejs') %>
  </body>
</html>