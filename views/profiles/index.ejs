<html>
    <head>
      <title>aTom | Profile</title>
      <link rel="stylesheet" type="text/css" href="/styles/profile.css">
      <%- include('../partials/generic_head') %>
      
    </head>
    <body>
      <%- include('../partials/navbar') %>
      <div class="container mt-5 ">
        <div class="row">
          <img class="user-profile-image img-fluid col-sm-2" src="https://i.pinimg.com/564x/ca/7c/61/ca7c61756513e98ef376c7c10e82ba23.jpg" alt="user-profile-photo">
          <div class="user-information-header col-sm-9">
            <div>
              <div class="d-flex">
                <h2 class="mr-auto"><%= userData.user_name %></h2>
                <a href="#">
                  <i class="fa-solid fa-file-pen"></i>
                </a>
              </div>
              <h5><%= userData.job_title %></h5>
              <p><i class="fa-solid fa-location-dot"></i><%= userData.city %></p>
              <div class="stars-outer">
                <div class="stars-inner" style="width:80%"></div>
              </div>
              <a href="#">
                <i class="fa-solid fa-message"></i>
              </a>
              <a href="mailto:grumpy.cat@emeow.com">
                <i class="fa-solid fa-envelope"></i>
              </a>
            </div>
            <div>
              <a href="<%= userData.linkedIn %>">LindedIn Link</a>
              <h6>Skill</h6>
              <ul class=" container list-inline px-0 mb-0">
                <% userData?.skills.forEach((skill) => { %>
                  <li class="list-inline-item mx-0 rounded"><%= skill %></li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>

        <div class="container mt-5">
          <h3>About me:</h3>
          <p>
            <%= userData.about_me %>
          </p>
        </div>
        <div class="container-fluid mt-5">
          <h3>My Completed project</h3>
            <div class="card-group row">
              <% userProjectList.forEach((project) => { %>
                <div class="card col-md-4">
                  <div id="carousel-project-<%= project._id %>" class="carousel slide mt-3" data-ride="carousel" data-interval = "1000" data-pause="hover">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img src="https://i.pinimg.com/564x/09/b9/11/09b9114f93ba2f3042557b5635c2f0bc.jpg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img src="https://i.pinimg.com/564x/ed/7f/dd/ed7fdde09195fa938d8ec94591360374.jpg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img src="https://i.pinimg.com/564x/98/fe/ab/98feabf17e0e0b733b7f4aa3a65cec0d.jpg" alt="Third slide">
                      </div>
                    </div>
                    <a class="carousel-control-prev" href="#carousel-project-photos-1" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-project-photos-1" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%= project.project_name%></h5>
                    <p class="card-text"><%= project.project_description%></p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted"> Created at <%= project.createdAt%></small>
                    <small class="text-muted"> Last updated <%= project.updatedAt%></small>
                  </div>
                </div>
              <% }) %>
            </div>
        </div>
      </div>
      <%- include('../partials/footer.ejs') %>
    </body>
</html>